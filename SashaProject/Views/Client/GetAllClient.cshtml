@model List<Domain.SashaProject.Entity.Client>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
@if (Model.Count == 0)
{
    <div class="container mt-4">
        <h2 class="align-content-center">Список пуст</h2>
        <h1>Можете добавить объект</h1>
        
        <a asp-controller="Client" asp-action="CreateClient">Добавить</a>
    </div>


}
else
{
    <div class="container mt-4">
        <h2>Client List</h2>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var clients in Model)
                {
                    <tr>
                        <td>@clients.ClientId</td>
                        <td>@clients.Name</td>
                        <td>@clients.LastName</td>
                        <td>@clients.PhoneNumber</td>
                        <td>
                            <!-- Кнопки "Редактировать" и "Удалить" с параметрами ID сущности -->
                            <a asp-controller="Client" asp-action="EditClient" asp-route-id="@clients.ClientId" type="button" class="btn btn-primary">Редактировать</a>
                            <a asp-controller="Client" asp-action="DeleteClient" asp-route-id="@clients.ClientId" type="button" class="btn btn-primary">Удалить</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="mt-3">

            <a asp-controller="Client" asp-action="CreateClient" class="btn btn-success">Add</a>

        </div>
    </div>


}

    